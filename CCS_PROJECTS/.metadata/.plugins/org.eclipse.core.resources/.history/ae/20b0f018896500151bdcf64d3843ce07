#ifndef __LED_FUNCTIONS_H__
#define __LED_FUNCTIONS_H__

//*****************************************************************************
//
// The item size and queue size for the UART message queue.
//
//*****************************************************************************
#define UART_SEND_QUEUE_SIZE    5

//*****************************************************************************
//
// Default LED toggle delay value. LED toggling frequency is twice this number.
//
//*****************************************************************************
#define LED_TOGGLE_DELAY        250

#endif // __LED_FUNCTIONS_H__
