#ifndef BRS_C_LED_H_
#define BRS_C_LED_H_

//*****************************************************************************
//
// Default LED toggle delay value. LED toggling frequency is twice this number.
//
//*****************************************************************************
#define LED_TOGGLE_DELAY 250
#define LED_ON           0x8000
#define LED_OFF          0x0000

//Actually a full RGB Range, but this is for Simplicity
enum LEDColors
{
	GREEN=0,
	RED,
	BLUE,
	NUM_LED_COLORS
};

//*****************************************************************************
//
// Configure the LEDs for Full RGB Functionality
//
//*****************************************************************************

void ConfigureLEDs();

void BlinkLED(uint8_t ledColor);

#endif /* BRS_C_LED_H_ */
